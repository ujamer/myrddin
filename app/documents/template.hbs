<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#phogen-menus">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      {{#link-to 'documents' class="navbar-brand" title="A PHO Interlude Wizard!"}}
        {{fa-icon "magic" size="lg"}}
      {{/link-to}}
    </div>

    <div class="collapse navbar-collapse" id="phogen-menus">

      {{! Place a list of document selections here.}}
      <ul class="nav navbar-nav navbar-left">
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" title="Open Documents">
            {{fa-icon "folder-open" size="lg" fixedWidth=true}}
            <span class="visible-xs-inline">Open Documents</span>
            <span class="badge">{{model.length}}</span>
          </a>
          <ul class="dropdown-menu" role="menu">
            <li role="presentation" class="dropdown-header"> Available Interludes:</li>
            {{#each model as |document|}}
              <li role="presentation">
                {{#link-to 'documents.view' document}}
                  {{fa-icon "edit" fixedWidth=true}}
                  {{document.title}}
                {{/link-to}}
              </li>
            {{else}}
              <li role="presentation" class="disabled">
                <a role="menuitem" tabindex="-1">
                  {{fa-icon "times" fixedWidth=true}}
                  No interludes available.
                </a>
              </li>
            {{/each}}
            <li role="presentation" class="divider"></li>
            <li role="presentation">
              <a {{action 'createDoc'}}>
                {{fa-icon "file-o" fixedWidth=true}}
                Start A New Interlude
              </a>
              </li>
          </ul>
        </li>
      </ul>

      {{! Place toggle panel visibility on the right.}}
      {{preview-toggle}}
      
    </div>
  </div>  
</nav>

{{! outlets for page contents}}
{{outlet}}
